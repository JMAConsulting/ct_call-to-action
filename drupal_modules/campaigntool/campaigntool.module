}

function campaigntool_cta_disable($action, $status) {
  civicrm_initialize();
  $id = explode('-', $action);
  if ($status == 1) {
    $status = 0;
  }
  else {
    $status = 1;
  }
  if ($id[0] == 'event') {
    $result = CRM_Event_BAO_Event::setIsActive($id[1], $status);
  }
  elseif($id[0] == 'petition') { 
    $result = CRM_Campaign_BAO_Survey::setIsActive($id[1], $status);
  }
  elseif($id[0] == 'profile') {
    $result = CRM_Core_BAO_UFGroup::setIsActive($id[1], $status);
  }

  if ($result) {
    echo 1;
  }
  CRM_Utils_System::civiExit();
}

function campaigntool_cta_delete($action) {
  civicrm_initialize();
  $id = explode('-', $action);
  if ($id[0] == 'event') {
    $params = array(
      'id' => $id[1],
      'version' => 3,
    );
    $result = civicrm_api( 'event','delete',$params );
  }
  elseif($id[0] == 'petition') {
    $params = array(
      'id' => $id[1],
      'version' => 3,
    );
    $result = civicrm_api( 'survey','delete',$params );
  }
  elseif($id[0] == 'profile') {
    $params = array(
      'id' => $id[1],
      'version' => 3,
    );
    $result = civicrm_api( 'uf_group','delete',$params );
  }

  if ($result) {
    echo 1;
  }
  CRM_Utils_System::civiExit();
}

