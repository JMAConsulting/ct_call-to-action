function campaigntool_cta_language($table, $field, $id, $row) {
  print drupal_render(drupal_get_form('campaigntool_cta_language_form', $table, $field, $id, $row));
}
function campaigntool_cta_language_form($form, $form_state, $table, $field, $id, $row) {
  civicrm_initialize();
  $config = CRM_Core_Config::singleton();
  $locales = array_keys($config->languageLimit);
  if ($table == 'Profile') {
    $field = 'help_pre';
  }
  $cols = array();
  foreach ($locales as $locale) {
    $cols[] = "{$field}_{$locale} {$locale}";
  }
  $tableJoin = "";
  if ($field != 'help_pre') {
    $tableJoin = "AND uj.entity_table = '{$table}'";
  } 
  switch ($row) {
    case 'title': 
      $weight = 1;
      break;
    case 'summary':
      $weight = 2;
      break;
    case 'description': 
      $weight = 3;
      break;
    case 'link':
      $weight = 4;
      break;
  }
  if ($field == 'help_pre' && $table != 'Profile') {
    // get uf group id
    $ufGroup = "SELECT 
      uf.id
      FROM civicrm_uf_field uf
      LEFT JOIN civicrm_uf_join uj ON uj.uf_group_id = uf.uf_group_id
      WHERE uj.entity_id = {$id}
      {$tableJoin}
      AND uf.weight = {$weight}";
    $id = CRM_Core_DAO::singleValueQuery($ufGroup);
    if ($id) {
      $table = 'civicrm_uf_field';
    }
  }
  elseif($table == 'Profile') {    
    $ufGroup = "SELECT 
      uf.id
      FROM civicrm_uf_field uf
      WHERE uf.uf_group_id = {$id}
      AND uf.weight = {$weight}";
    $id = CRM_Core_DAO::singleValueQuery($ufGroup);
    $table = 'civicrm_uf_field';
  }
  $query = 'SELECT ' . implode(', ', $cols) . " FROM $table WHERE id = $id";

  $dao = new CRM_Core_DAO();
  $dao->query($query, FALSE);
  $dao->fetch();

  $languages = CRM_Core_I18n::languages(TRUE);
  foreach ($locales as $locale) {
    $form["{$field}_{$locale}"] = array(
      '#type' => ($field == 'help_pre') ? 'textarea' : 'textfield',
      '#size' => 30,
      '#maxlength' => 100000000000,
      '#title' => t($languages[$locale]),
      '#default_value' => $dao->$locale,
    );
  }
  $form['field'] = array(
    '#type' => 'hidden',
    '#title' => 'Field Hidden',
    '#default_value' => $field,
  );
  $form['table'] = array(
    '#type' => 'hidden',
    '#title' => 'Table Hidden',
    '#default_value' => $table,
  );
  $form['id'] = array(
    '#type' => 'hidden',
    '#title' => 'Id Hidden',
    '#default_value' => $id,
  );
  $form['type'] = array(
    '#type' => 'hidden',
    '#title' => 'Type Hidden',
    '#default_value' => $row,
  );
  $form['submit_button'] = array(
    '#type' => 'submit',
    '#value' => t('Submit'),
  );
  return $form;
}

function campaigntool_cta_language_form_submit($form, &$form_state){
  civicrm_initialize();
  $config = CRM_Core_Config::singleton();
  $locales = array_keys($config->languageLimit);
  $table  = $form_state['values']['table'];
  $field  = $form_state['values']['field'];
  $row  = $form_state['values']['type']; 
  $id = $form_state['values']['id'];
  $cols   = array();
  $params = array(array($form_state['values']['id'], 'Int'));
  $i = 1;
  foreach ($locales as $locale) {
    $cols[] = "{$field}_{$locale} = %$i";
    $params[$i] = array( $form_state['values']["{$field}_{$locale}"], 'String');
    $i++;
  }
  $query = "UPDATE $table SET " . implode(', ', $cols) . " WHERE id = %0";
  $dao   = new CRM_Core_DAO();
  $query = CRM_Core_DAO::composeQuery($query, $params, TRUE);
  $dao->query($query, FALSE);
  switch ($row) {
    case 'title': 
      $weight = 1;
      break;
    case 'summary': 
      $weight = 2;
      break;
    case 'description': 
      $weight = 3;
      break;
    case 'link':
      $weight = 4;
      break;
  }
  // get uf group id
  $ufGroup = "SELECT 
      uf.id, uf.field_name
      FROM civicrm_uf_field uf
      WHERE uf.id = {$id}
      AND uf.weight = {$weight}";
  if ($table == 'civicrm_event') {
    $ufGroup = "SELECT 
      uf.id
      FROM civicrm_uf_field uf
      LEFT JOIN civicrm_uf_join uj ON uj.uf_group_id = uf.uf_group_id 
      WHERE uj.entity_id = {$id} 
      AND uj.entity_table = 'civicrm_event'
      AND uf.weight = {$weight}";
  }
  $id = CRM_Core_DAO::singleValueQuery($ufGroup);
  $params[0] = array($id, 'Int');
  $i = 1;
  $cols = array();
  foreach ($locales as $locale) {
    $cols[] = "help_pre_{$locale} = %$i";
    $i++;
  }
  if ($id) {
    $table = 'civicrm_uf_field';
  }
  $query = "UPDATE $table SET " . implode(', ', $cols) . " WHERE id = %0";
  $dao   = new CRM_Core_DAO();
  $query = CRM_Core_DAO::composeQuery($query, $params, TRUE);
  $dao->query($query, FALSE);
  
  $form_state['redirect'] = $_SERVER['HTTP_REFERER'];

}

function state_fill_callback($form, &$form_state) {
