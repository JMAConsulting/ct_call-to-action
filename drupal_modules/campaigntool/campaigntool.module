function campaigntool_civicrm_buildForm($formName, &$form) { 
  if ($formName == "CRM_Activity_Form_Activity" && $form->_action & CRM_Core_Action::ADD
      && CRM_Utils_Request::retrieve('atype', 'Positive')) {
    
    $assignee_contact_names[$form->_currentUserId] =  CRM_Core_DAO::getFieldValue('CRM_Contact_DAO_Contact',
      $form->_currentUserId,
      'sort_name',
      'id'
    );
    $form->assign('assignee_contact', CRM_Activity_Form_Activity::formatContactValues($assignee_contact_names));
    
    $form->removeElement('campaign_id');
    $form->removeElement('engagement_level');
    $form->removeElement('location');
    $form->removeElement('duration');
    
    $form->setDefaults(array('status_id' => array_search('Completed', CRM_Core_PseudoConstant::activityStatus('name'))));
  }
  
  if ($formName == "CRM_Profile_Form_Edit" || 
    $formName == "CRM_Event_Form_Registration_Register"|| 
    $formName == "CRM_Campaign_Form_Petition_Signature") {
    CRM_Core_Region::instance('page-body')->add(array(
        'template' => 'CRM/Extra/ModifyTpl.tpl',
      ));
    global $language;
    switch ($formName) {
      case "CRM_Profile_Form_Edit":
        $afterDivname = '#crm-profile-block';
        $eachDivName = '#crm-profile-block';
        break;
      case "CRM_Event_Form_Registration_Register":
        $afterDivname = '#billing-payment-block';
        $eachDivName = '.crm-profile';
        $form->assign('buttonText', ($language->language=='fr') ? 'Inscrivez-vous' : 'Register Now');
        break;
      case "CRM_Campaign_Form_Petition_Signature":
        $afterDivname = '.crm-petition-activity-profile';
        $eachDivName = '.crm-petition-contact-profile';
        if ($form->getVar('_activityProfileId')) {
          $form->assign('surveyText', ($language->language=='fr') ? 'Envoyez votre réponse au sondage' : 'Send your Survey');
        }
        break;
    }
    $form->assign('afterdiv', $afterDivname);
    $form->assign('eachdiv', $eachDivName);
  } 
}

